package com.proyecto.palabrapalindroma;

import java.util.Scanner;


public class PalabraPalindroma {
	public static void main(String args[]) {
		
		
		String palabra="";
		Scanner entrada = new Scanner(System.in);
		
		System.out.println("Ingrese una palabra para saber si es palindroma");
		
		palabra = entrada.nextLine();
		
		
		Palindromo(palabra);
		
		
		
	}
	
	public static void Palindromo(String palabra) {
		String palabraID="", palabraDI="";
		for(int i =0; i<palabra.length();i++) {
			palabraID += palabra.charAt(i);
		}
		
		int n = palabra.length();
		for(int j=n-1;j>=0;j--) {
			palabraDI += palabra.charAt(j);
		}
		
		if(palabraID.equals(palabraDI)) {
			System.out.println("La palabra ingresada SI es palindroma");
		}else {
			System.out.println("La palabra ingresada NO es palidroma");
		}
		
	
		
	}

}
